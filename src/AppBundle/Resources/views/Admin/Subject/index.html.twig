{% extends 'AppBundle::admin_base.html.twig' %}

{% block title %}Subjects{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/app/css/students.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>Subjects</h1>
    <hr>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>id</th>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Classes</th>
        </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td></td>
                <td>{{ subject.name}}</td>
                <td>{{ subject.lastName }} {{ subject.firstName }}</td>
                {#<td>{{ subject.classes_list }}</td>#}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}{% endblock %}