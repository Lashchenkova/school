{% extends 'AppBundle::admin_base.html.twig' %}

{% block title %}Students{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/app/css/students.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>Students</h1>
    <hr>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Class</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.lastName }} {{ student.firstName }}</td>
                <td>{{ student.classnumber.classNumber }}</td>
                <td>{{ student.dateOfBirth|date("Y-m-d") }}</td>
                <td>{{ student.gender }}</td>
                <td>{{ student.user.email }}</td>
                <td>
                    <a href="{{ path('admin_student_edit', {id: student.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="{{ path('admin_student_delete', {id: student.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true" onclick="return confirm('You want to delete this student. Sure?')"></span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}{% endblock %}