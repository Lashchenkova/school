{% extends 'AppBundle::admin_base.html.twig' %}

{% block title %}Teachers{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/app/css/students.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <h1>Teachers</h1>
    <hr>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Class Teacher</th>
        </tr>
        </thead>
        <tbody>
        {% for teacher in teachers %}
            <tr>
                <td></td>
                <td>{{ teacher.firstname }} {{ teacher.lastname }}</td>
                <td>{{ teacher.dateofbirth|date("Y-m-d")}}</td>
                <td>{{ teacher.gender }}</td>
                <td>{{ teacher.email }}</td>
                <td>{{ teacher.classnumber }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}{% endblock %}